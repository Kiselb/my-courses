extends index

block panel
    .stream-public-panel
        - var ownerLink = '/users/' + OwnerId;
        .stream-public-panel-name #{Name}
        .stream-public-panel-author
            p Автор:
                a(href=ownerLink) #{Owner}
        .stream-public-panel-state Состояние: #{StateInfo}
        .stream-public-panel-period #{"Длительность: с " + new Intl.DateTimeFormat('de-DE', { year: "numeric", month: "2-digit", day: "2-digit" }).format(new Date(Start)) + " по " + new Intl.DateTimeFormat('de-DE', { year: "numeric", month: "2-digit", day: "2-digit" }).format(new Date(Finish))}
        .stream-public-panel-lessons
            each lesson in Lessons
                span.stream-public-lesson-number #{lesson.OrderNo}
                .stream-public-lesson-theme #{lesson.Theme}
                .stream-public-lesson-purpose Цель урока: #{lesson.Purpose}
                .stream-public-lesson-duedate #{'Дата проведения: ' + new Intl.DateTimeFormat('de-DE', { year: "numeric", month: "2-digit", day: "2-digit", hour: "2-digit", minute: "2-digit" }).format(new Date(lesson.DueDate)) }
                br
