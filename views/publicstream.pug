extends index

block panel
    .section
        .section-header
            - var ownerLink = '/users/' + OwnerId;
            .section-header-header #{Name} (public stream pug)
            .section-header-text
                p Автор:
                    a(href=ownerLink) #{Owner}
            .section-header-text.section-header-text-warning Состояние: #{StateInfo}
            .section-header-text #{"Длительность: с " + new Intl.DateTimeFormat('de-DE', { year: "numeric", month: "2-digit", day: "2-digit" }).format(new Date(Start)) + " по " + new Intl.DateTimeFormat('de-DE', { year: "numeric", month: "2-digit", day: "2-digit" }).format(new Date(Finish))}
        .section-details
            - var orderNumber = 1
            each lesson in Lessons
                span.list-item-orderno #{orderNumber}
                .list-item-header #{lesson.Theme}
                .list-item-text Цель урока: #{lesson.Purpose}
                .list-item-text #{'Дата проведения: ' + new Intl.DateTimeFormat('de-DE', { year: "numeric", month: "2-digit", day: "2-digit", hour: "2-digit", minute: "2-digit" }).format(new Date(lesson.DueDate)) }
                - orderNumber = orderNumber + 1
                br
